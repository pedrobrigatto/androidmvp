<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.uniararas.posgrad.androidmvp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.impl.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.impl.HomeActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="br.uniararas.posgrad.androidmvp.intent.action.MOSTRA_HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.impl.DetalhesBalada"
            android:label="@string/title_activity_detalhes_balada" >
            <intent-filter>
                <action android:name="br.uniararas.posgrad.androidmvp.intent.action.DETALHES_BALADA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.impl.NovoUsuario"
            android:label="@string/title_activity_novo_usuario" >
            <intent-filter>
                <action android:name="br.uniararas.posgrad.androidmvp.intent.action.CADASTRA_USUARIO" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
